<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.refugeesinfo.CountryDetails$PlaceholderFragment">



        <!--tools:context="com.instinctcoder.sqlitedb.StudentDetail$PlaceholderFragment"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/textName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Code"
            android:id="@+id/textCode"
            android:layout_below="@+id/textName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ref"
            android:id="@+id/textPopRef"
            android:layout_below="@+id/textCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Asylum"
            android:id="@+id/textPopAsylum"
            android:layout_below="@+id/textPopRef"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Returned"
            android:id="@+id/textPopReturned"
            android:layout_below="@+id/textPopAsylum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IDP"
            android:id="@+id/textPopIDP"
            android:layout_below="@+id/textPopReturned"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Returned IDP"
            android:id="@+id/textPopReturnedIDP"
            android:layout_below="@+id/textPopIDP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Stateless"
            android:id="@+id/textPopStateless"
            android:layout_below="@+id/textPopReturnedIDP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OOC"
            android:id="@+id/textPopOOC"
            android:layout_below="@+id/textPopStateless"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total"
            android:textStyle="bold"
            android:id="@+id/textPopTotal"
            android:layout_below="@+id/textPopOOC"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />





        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_toRightOf="@+id/textName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textName"
            android:width="150dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextCode"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textCode"
            android:width="150dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopRef"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopRef"
            android:width="150dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopAsylum"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopAsylum"
            android:width="150dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopReturned"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopReturned"
            android:width="150dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopIDP"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopIDP"
            android:width="150dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopReturnedIDP"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopReturnedIDP"
            android:width="150dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopStateless"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopStateless"
            android:width="150dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPopOOC"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopOOC"
            android:width="150dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@color/material_blue_grey_800"
            android:ems="10"
            android:id="@+id/editTextPopTotal"
            android:width="150dp"
            android:layout_alignRight="@+id/editTextName"
            android:layout_alignEnd="@+id/editTextName"
            android:layout_alignTop="@+id/textPopTotal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSave"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnClose" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btnClose"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/highlighted_text_material_light"
            android:id="@+id/btnDelete"
            android:layout_alignTop="@+id/btnSave"
            android:layout_toLeftOf="@+id/btnSave" />

    </RelativeLayout><!-- From: file:/Users/laurent/AndroidstudioProjects/RefugeesInfo/app/src/main/res/layout/activity_country_details.xml -->