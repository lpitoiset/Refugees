<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.refugeesinfo.CountryView">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Code"
        android:id="@+id/textCode"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_ref"
        android:id="@+id/textPopRef"
        android:layout_below="@+id/textCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_asylum"
        android:id="@+id/textPopAsylum"
        android:layout_below="@+id/textPopRef"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_returned"
        android:id="@+id/textPopReturned"
        android:layout_below="@+id/textPopAsylum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_idp"
        android:id="@+id/textPopIDP"
        android:layout_below="@+id/textPopReturned"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_returned_idp"
        android:id="@+id/textPopReturnedIDP"
        android:layout_below="@+id/textPopIDP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_stateless"
        android:id="@+id/textPopStateless"
        android:layout_below="@+id/textPopReturnedIDP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_others"
        android:id="@+id/textPopOOC"
        android:layout_below="@+id/textPopStateless"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total"
        android:id="@+id/textPopTotal"
        android:layout_below="@+id/textPopOOC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:id="@+id/valueName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textName"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:height="30dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextCode"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textCode"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopRef"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopRef"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopAsylum"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopAsylum"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopReturned"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopReturned"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopIDP"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopIDP"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopReturnedIDP"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopReturnedIDP"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopStateless"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopStateless"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPopOOC"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopOOC"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="#EEEEEE"
        android:ems="20"
        android:id="@+id/valuePopTotal"
        android:layout_alignRight="@+id/valueName"
        android:layout_alignEnd="@+id/valueName"
        android:layout_alignTop="@+id/textPopTotal"
        android:width="150dp"
        android:gravity="right"
        android:textAlignment="gravity" />

    android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnClose"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
